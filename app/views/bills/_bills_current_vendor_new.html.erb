<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users companys-table-users-icon"></i>Current Vendor Info
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="billVendor" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Address 1</th>
                                <th>Address 2</th>
                                <th>Country</th>
                                <th>state</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Address 1</th>
                                <th>Address 2</th>
                                <th>Country</th>
                                <th>state</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Email</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <%#if @all_general_company.present?%>
                                <tr>
                                    <td><%#=@all_general_company.try(:Address 1)%></td>
                                    <td><%#=@all_general_company.try(:Address 2)%></td>
                                    <td><%#=@all_general_company.City/state/zip.try(:Address 1)%></td>
                                    <td><%#=@all_general_company.Payment Terms.try(:Address 1)%></td>
                                    <td><%#=@all_general_company.Status.try(:Address 1)%></td>
                                </tr>
                            <%#end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">UpCity/state/zipd yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#billVendor').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>