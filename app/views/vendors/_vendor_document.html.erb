<div class="col-md-12 col-xs-12">
    <div class="modal fade" id="vendorDocumentType" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Vendor Document Type</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <%=text_field_tag :name, "",:class => "form-control vendor_document_type_name", :placeholder=>"Enter Vendor document type Name"%>
                    </div>
                </div>
                <div class="modal-footer text-center">
                    <%= link_to "Save", "", :class=>"btn btn-primary btndoc-save"%>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
 $( document ).on('turbolinks:load', function(){
  $('.btndoc-save').click(function(){
    confirm("are u sure?")
    var url = '/vendors/get_vendor_document_types'
    $.ajax({
      type: "get",
      url: url,
      data: {
        "name" : $(".vendor_document_type_name").val()
      }
    })
    document.location.reload();
  });
});
</script>