<div class="row">
    <div class="col-sm-12">
        <div class="panel with-nav-tabs panel-info">
            <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#preferenceUser" data-toggle="tab">Users</a></li>
                    <li><a href="#userInformation" data-toggle="tab">User Information</a></li>
                    <li>
                        <div class="dropdown">
                            <button class="btn btn-info dropdown-toggle" data-toggle="dropdown" style="margin-left: 5px;">
                                Privilege Set
                            </button>
                            <%if ff.present?%>
                                <ul class="dropdown-menu">
                                    <li style="margin-left: 10px;">
                                        <%#=f.last.user_info.try(:privilege_set)%>
                                    </li>
                                </ul>
                            <%end%>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="preferenceUser">
                        <div class="col-sm-6">
                            <div class="panel panel-info">
                                <div class="panel-heading text-center">
                                    User
                                </div>
                                <div class="panel-body">
                                    <%# @preference_company.users.build if @preference_company.users.blank?%>
                                        <%#= f.nested_fields_for :users, validate: true do |ff| %>
                                    <%= render  partial: 'users/preference_users_show_form', locals: {ff:ff}%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="userInformation">
                        <div class="col-sm-6">
                            <div class="panel panel-info">
                                <div class="panel-heading text-center">User Info</div>
                                <div class="panel-body">
                                    <%# ff.object.build_user_info unless ff.object.user_info%>
                                    <%= ff.fields_for :user_info do |fff| %>
                                        <%= render  partial: 'users/preference_users_userinfo_show_form', locals: {fff:fff} %>
                                    <%end%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>