<div class="content">
<%@general_product.build_inventory unless @general_product.inventory %>  
<div class="col-sm-12">
 <%=t.fields_for :inventory do |ff|%>
      <div class="form-group">
          <label class="control-label" for="orderfilter">Date of Purchase</label>
           <div class="controls">
         <%=ff.date_field :date, :class => "form-control", :placeholder=>"" %>
        </div>
        </div>

        <div class="form-group">
          <label class="control-label" for="orderfilter">Purchase cost</label>
              <div class="controls">
                <%=ff.number_field :purchase_cost, :class => "form-control", :placeholder=>"cost"%>
              </div>
        </div>

        <div class="form-group">
         <label class="control-label" for="orderfilter">Year placed in Svc</label>
            <span class="required_field">*</span>
              <div class="controls">
               <%=ff.text_field :year_placed_in_svc, :class => "form-control", :placeholder=>"years" ,:required=>true%>
               </div>
        </div>

        <div class="form-group">
        <label class="control-label" for="orderfilter">Depreciation years</label>
          <span class="required_field">*</span>
              <div class="controls">
                <%=ff.text_field :depreciation_year, :class => "form-control", :placeholder=>"years",:required=>true %>
               </div>
        </div>

        <div class="form-group">
         <label class="control-label" for="orderfilter">Replacement Cost</label>
                 <div class="controls">
                   <%=ff.number_field :approx_value, :class => "form-control", :placeholder=>"value"%>
                  </div>
        </div>

       <%#= ff.submit "Submit", :class=>"btn btn-primary"%>
    </div>
    <%end%>
</div>