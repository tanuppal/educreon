<script type="text/javascript">
  $(document).on( "change", "#select-kit-item", function(){
     var element = $(this);
     var url = "/products/get_product_kit_item"
     $.ajax({
       type: "get",
       url: url,
       data:{
         "kit_item_id" : $(this).val()
       },
        success: function(data) {
           var span_of_set = element.parent().parent().find('.test-quantity').find('.span-quantity');
           if(data.status == "In Stock"){
             //alert("hello")
             span_of_set.css("color","green");
             span_of_set.css("font-size","20px");
             span_of_set.html(data.status + "!! Available quantity "+data.quantity)
           }
           else{
             span_of_set.css("color","red");
             span_of_set.html(data.status)
           }
         },
         error: function(data) {
             successmessage = 'Error';
             $("label#successmessage").text(successmessage);
         },
     });
   });
</script>
