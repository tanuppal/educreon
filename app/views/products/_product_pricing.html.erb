<div class="content">
  <% @general_product.build_product_pricing unless @general_product.product_pricing %>
  <div class="col-sm-12">
    <%= t.fields_for :product_pricing do |ff|%>
      <div class="form-group">
        <label for="inputCost">Cost Price</label>
        <span class="required_field">*</span>
        <%=ff.text_field :cost, :class => "form-control", :placeholder=>"cost",:required=>true %>
      </div>
      <div class="form-group">
        <label for="inputCost">Selling Price</label>
        <span class="required_field">*</span>
        <%=ff.text_field :price, :class => "form-control", :placeholder=>"cost",:required=>true %>
      </div>

      <div class="form-group">
        <label for="inputPreferedvendor">Prefered Vendor</label>
        <%=ff.select :vendor_id, options_for_select(@all_general_vendor.collect{ |u| [u.name, u.id]}),{:prompt=>"--Please Select--"}, {:class => "form-control"} %>
      </div>

      <!-- <div class="form-group">
        <label for="inputTaxable">Taxable</label>
        <%#= ff.check_box :taxable%>
      </div> -->

      <div class="row">
        <%#= ff.submit "Submit", :class=>"btn btn-primary"%>
      </div>
    <%end%>
  </div>
  
</div>
