<div class="content">
  <% @general_product.build_product_pricing unless @general_product.product_pricing%>
  <div class="col-sm-12">
    <%= t.fields_for :product_pricing do |ff|%>
      <div class="form-group col-sm-6">
        <label for="inputCost">Cost Price</label>
        <span class="required_field">*</span>
        <%=ff.text_field :cost, :class => "form-control edit-field", :placeholder=>"cost",:required=>true, disabled: true %>
      </div>

      <div class="form-group col-sm-6">
        <label for="inputCost">Selling Price</label>
        <span class="required_field">*</span>
        <%=ff.text_field :price, :class => "form-control edit-field", :placeholder=>"cost",:required=>true, disabled: true %>
      </div>

      <div class="form-group col-sm-6">
        <label for="inputPreferedvendor">Prefered Vendor</label>
        <%=ff.select :vendor_id, options_for_select(@all_general_vendor.collect{ |u| [u.name, u.id]}),{:prompt=>"--Please Select--"}, {:class => "form-control edit-field", disabled: "disabled"} %>
      </div>

<!--       <div class="form-group">
        <label for="inputTaxable">Taxable</label>
        <%#= ff.check_box :taxable, class: "edit-field", disabled: true%>
      </div>
 -->
      <div class="row">
        <%#= ff.submit "Submit", :class=>"btn btn-primary"%>
      </div>
    <%end%>
  </div>
  
</div>
<div class="form-group">
    <div class ="col-sm-12">
        <div class="text-right">
          <%=link_to "Edit","javascript:void(0)",:class=>"btn btn-success edit_button"%>
          <%=t.submit "Submit",:class=>"btn btn-info edit-btn", style:"margin-left:0px;"%>
        </div>
    </div>    
</div>
