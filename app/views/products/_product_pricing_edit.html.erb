<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> Pricing
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="productPricing" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>cost</th>
                                <th>price</th>
                                <th>prefferd Vendor</th>
                                <th>Taxable</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>cost</th>
                                <th>price</th>
                                <th>prefferd Vendor</th>
                                <th>Taxable</th>
                            </tr>
                        </tfoot>
                        <tbody>
                                <%@all_general_product.product_pricings.each do |x|%>
                                    <tr>
                                        <td><%=x.try(:cost)%></td>
                                        <td><%=x.try(:price)%></td>
                                        <td><%=x.vendor.try(:name)%></td>
                                        <!-- <td><%#=x.try(:taxable)%></td>  -->
                                    </tr>
                                <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#productPricings').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>