<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div class="content-wrapper">
  <div class="container-fluid">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">My Dashboard</li>
    </ol>
    <div class="row">
      <div class="col-12">
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-users fa-spin"></i>
              </div>
              <div class="mr-5">Total Customers</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="">
              <span class="float-left"><%=@total_customer.count%></span>
              <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-list fa-spin"></i>
              </div>
              <div class="mr-5">Total Vendors</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="">
              <span class="float-left"><%=@total_vendor.count%></span>
              <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-shopping-cart fa-spin"></i>
              </div>
              <div class="mr-5">Total Orders</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="">
              <span class="float-left"><%=@total_order.count%></span>
              <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-support fa-spin "></i>
              </div>
              <div class="mr-5">Total Products</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="">
              <span class="float-left"><%=@total_product.count%></span>
              <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
          </div>
        </div>
        <div class="col-lg-6">
          <%= render partial: 'dashboards/customer_piechart' %>
          <div class="card mb-3">
            <div class="card-header">
              <i class="fa fa-bar-chart"></i>Total Number of Customers
            </div>
            <div class="card-body">
              <div class="row">
                <div id="customerpiechart" style="width: 90%; height: 295px;"></div>
              </div>
            </div>
            <%if Customer.last.present?%>
              <div class="card-footer small text-muted"><%= time_ago_in_words(Customer.last.created_at)%></div>
            <%end%>
          </div>
        </div>
        <!-- <div class="col-lg-6">
        <%#= render partial: 'check_in' %>
        </div> -->
        <div class="col-lg-6">
          <%= render partial: 'dashboards/products_piechart' %>
          <div class="card mb-3">
            <div class="card-header">
              <i class="fa fa-area-chart"></i>Total Number of Products
            </div>
            <div class="card-body">
              <div id="productpiechart" style="width: 90%; height: 295px;"></div>
            </div>
            <%if Product.last.present?%>
              <div class="card-footer small text-muted"><%= time_ago_in_words(Product.last.created_at)%></div>
            <%end%>
          </div>
        </div>
        <div class="col-lg-12">
          <%= render partial: 'dashboards/products_outside_piechart' %>
          <div class="card mb-3" style="margin-bottom: 70px !important;">
            <div class="card-header">
                <i class="fa fa-area-chart"></i>Total Number of Products Outside</div>
            <div class="card-body">
                <!-- <canvas id="myVendors" width="100%" height="60"></canvas> -->
              <div id="productOustsidepiechart" style="width: 90%; height: 295px;"></div>
            </div>
            <%if Product.last.present?%>
              <div class="card-footer small text-muted"><%= time_ago_in_words(Product.last.created_at)%></div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

