<div class="col-md-12 col-xs-12">
  <div class="modal fade" id="myPaymentMode" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add Payment Mode</h4>
        </div>
        <div class="modal-body">
         <%= form_for(@order_payment_mode, remote: true) do |ttt| %>
          <div class="form-group">
            <label>Add Payment Mode</label>
              <%=ttt.text_field :name,:class=>"form-control term_content", required: true%>
          </div>
            <%=ttt.submit "Submit", :class=>"btn btn-info"%>
             <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <%end%>
        </div>
        <div class="modal-footer text-center">
        </div>
      </div>
    </div>
  </div>
</div>