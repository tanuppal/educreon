<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="login-screen text-center clearfix">
				<div class="col-md-6" style="width: 170px;">
				<%= image_tag "rent.jpg", :class=>"logo", :style=>"height:81px;"%>
				</div>
				<div class="col-md-6">
			  		<h1 class="tracker-form">RentalTracker</h1>
				</div>		
			</div>
			<br>
			<div class="well text-center">
				<legend>
					<h2>Forgot your password?</h2>
				</legend>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  		<%= devise_error_messages! %>

			  		<div class="form-group">
			  			<div class="row">
			  				<div class="col-md-12">
					    		<%= f.label :email %><br />
					    		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6 col-md-offset-3" %>
			  				</div>
			  			</div>	
			  		</div>
			  		<div class="actions">
			    		<%= f.submit "Send me reset password instructions", class: "btn btn-success animated zoomIn" %>
			  		</div>
				<% end %>
				<br>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>

<style type="text/css">
body{
	background: #0069ff;
}
</style>