<div class="col-md-12 col-xs-12">
  <div class="modal fade" id="orderSalesperson" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Order Salesperson</h4>
        </div>
        <div class="modal-body">
          <%= form_for(@sales_person, remote: true) do |sp| %>
          <div class="form-group">
            <label>Name</label>
           <%=sp.text_field :name, :class=>"form-control",required: true%>
          </div>
           <%=sp.submit "Submit", :class=>"btn btn-info"%>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
         <%end%>
        </div>
        <div class="modal-footer text-center">
        </div>
      </div>
    </div>
  </div>
</div>