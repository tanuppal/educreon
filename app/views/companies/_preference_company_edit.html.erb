<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users companys-table-users-icon"></i>Company Info
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="preferenceCompanyList" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Name</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Pin Code</th>
                                <th>Phone</th>
                                <th>Fax</th>
                                <th>Email</th>
                                <th>Url</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                 <th>Name</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Pin Code</th>
                                <th>Phone</th>
                                <th>Fax</th>
                                <th>Email</th>
                                <th>Url</th>
                            </tr>
                        </tfoot>
                        <tbody>
                                <tr>
                                    <td><%=@preference_company.try(:name)%></td>
                                    <td><%=@preference_company.try(:address)%></td>
                                    <td><%=@preference_company.country.try(:name)%></td>
                                    <td><%=@preference_company.state.try(:name)%></td>
                                    <td><%=@preference_company.city.try(:name)%></td>
                                    <td><%=@preference_company.try(:pin_code)%></td>
                                    <td><%=@preference_company.try(:phone)%></td>
                                    <td><%=@preference_company.try(:fax)%></td>
                                    <td><%=@preference_company.try(:email)%></td>
                                    <td><%=@preference_company.try(:url)%></td>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users companys-table-users-icon"></i>Company Logo
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body text-center">
                <%=image_tag(@preference_company.logo.url(:pslide))%>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#preferenceCompanyList').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>