<div class="form-group">
	<label>Email Id</label>
	<%=ff.email_field :email, validate: true, autofocus: true, autocomplete: "email",:class => "form-control edit-field", disabled: true %>
</div>
<div class="form-group">
	<div class="col-sm-12" style="padding-left: 5px;padding-right: 15px;">
		<button class="btn btn-primary btn-sm center-block clickPassword edit-field hide" type="button" data-target=".passwordHide" style="margin-bottom: 20px;padding-left: ">Click To Change Password</button>
	</div>
</div>
<div class="form-group hide passwordHide">	
	<label>Password</label>
    <%= ff.password_field :password, autocomplete: "off",:class => "form-control edit-field", readonly: true %>
   	<em>6 characters minimum required</em>
</div>	
<div class="form-group hide passwordHide">
	<label>Confirm Password</label>
	<%= ff.password_field :password_confirmation, autocomplete: "off",:class => "form-control edit-field", readonly: true %>
   	<em>6 characters minimum required</em>
</div>
<div class="actions">
  <div class="col-sm-12">
	<div class="text-right">
	    <%=link_to "Edit","javascript:void(0)",:class=>"btn btn-success edit_button"%>
	    <%=ff.submit "Submit",:class=>"btn btn-info edit-btn"%>
	</div>
	</div>
</div> 	
<script type="text/javascript">
$(document).on("click",".clickPassword",function(){
	// alert("hello");
	$(".passwordHide").removeClass("hide");
	$(".clickPassword").addClass("hide");
	});
</script>    
    	

