<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users vendors-table-users-icon"></i> Notes
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="orderNotes" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Notes</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <%if @last_order.present?%>
                                <%@last_order.order_notes.each do |x|%>
                                    <tr>
                                        <td><%=x.try(:note)%></td>
                                    </tr>
                                <%end%>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#orderNotes').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>