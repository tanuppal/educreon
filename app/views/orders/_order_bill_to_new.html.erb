<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> Bill To
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="orderBillTos" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Location</th>
                                <th>Name</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Phone</th>
                                
                                
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Location</th>
                                <th>Name</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Phone</th>
                                
                            </tr>
                        </tfoot>
                        <tbody>
                            <%if @last_order.present? %>
                            <%#@last_order.order_bill_to.each do |x|%>
                                    <tr>
                                      <td> <%= @last_order.order_bill_to.customer_location.try(:name)%></td>
                                      <td> <%= @last_order.order_bill_to.customer_location.try(:name)%></td>
                                      <td><%= @last_order.order_bill_to.country.try(:name)%></td>
                                      <td><%= @last_order.order_bill_to.city.try(:name)%></td>
                                      <td><%= @last_order.order_bill_to.customer_location.try(:phone)%></td>
                                     
                                    </tr>
                            <%#end%>
                             <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#orderBillTos').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>
