<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> Contact
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="customerContactMethodsList" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Type</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Is Primary</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Type</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Is Primary</th>
                            </tr>
                        </tfoot>
                        <tbody>                          
                          <%@general_customer.customer_contact_methods.each do |x|%>
                            <tr>
                              <td><%=x.contact_method_type.try(:name)%></td>
                              <td><%=x.try(:phone) %></td>
                              <td><%=x.try(:email)%></td>
                              <td><%=x.try(:is_primary)%></td>
                            </tr>
                          <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#customerContactMethodsList').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>