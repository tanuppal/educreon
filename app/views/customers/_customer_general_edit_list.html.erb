<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> General
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="customerGenerals" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Name</th>
                                <th>Type</th>
                                <th>Terms</th>
                                <th>URL</th>
                                <th>Source</th>
                                <th>Shipping</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Name</th>
                                <th>Type</th>
                                <th>Terms</th>
                                <th>URL</th>
                                <th>Source</th>
                                <th>Shipping</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <tr>
                                <td><%=@general_customer.name%></td>
                                <td><%=@general_customer.customer_type.try(:name)%></td>
                                <td><%=@general_customer.customer_term.try(:name)%></td>
                                <td><%=@general_customer.try(:url)%></td>
                                <td><%=@general_customer.customer_source.try(:name)%></td>
                                <td><%=@general_customer.customer_shipping.try(:name)%></td>
                                <td><%=@general_customer.customer_status.try(:status)%></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#customerGenerals').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>
