<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> Notes
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="customerNoteList" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Sl.no.</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Sl.no.</th>
                                <th>Notes</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <%@general_customer.customer_related_notes.each_with_index do |x, index|%>
                                <tr>
                                    <td><%=index+1%></td>
                                    <td><%=x.try(:note)%></td>
                                </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#customerNoteList').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>