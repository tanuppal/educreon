<div class="row">
    <!-- Order Tables -->
    <div class="col-md-12 col-xs-12">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-users customers-table-users-icon"></i> Locations
                <button class="pull-right btn btn-primary table-print-icon"><i class="fa fa-print"></i></button>
                <button class="pull-right btn btn-primary table-download-icon"><i class="fa fa-download"></i></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="customerLocationsList" width="100%" cellspacing="0">
                        <thead>
                            <tr class="info">
                                <th>Name</th>
                                <th>Attn</th>
                                <th>Address Line 1</th>
                                <th>Address Line 2</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Landmark</th>
                                <th>Is Primary</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr class="info">
                                <th>Name</th>
                                <th>Attn</th>
                                <th>Address Line 1</th>
                                <th>Address Line 2</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Phone</th>
                                <th>Landmark</th>
                                <th>Is Primary</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <%@general_customer.customer_locations.each do |x|%>
                                <tr>
                                    <td><%=x.try(:name)%></td>
                                    <td><%=x.try(:attn)%></td>
                                    <td><%=x.try(:address_line_1)%></td>
                                    <td><%=x.try(:address_line_2)%></td>
                                    <td><%=x.country.try(:name)%></td>
                                    <td><%=x.state.try(:name)%></td>
                                    <td><%=x.city.try(:name)%></td>
                                    <td><%=x.try(:phone)%></td>
                                    <td><%=x.try(:landmark)%></td>
                                    <td><%=x.try(:is_primary)%></td>
                                </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
        $('#customerLocationsList').DataTable({
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
        });
    });
</script>